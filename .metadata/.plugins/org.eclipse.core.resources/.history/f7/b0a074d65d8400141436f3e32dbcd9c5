package com.example.tests;

import org.openqa.selenium.By;

public class GroupData {
	public String name;
	public String header;
	public String footer;

	public GroupData() {
		 name = "";
		 header = "";
		 footer = "";
	}

//SET methods
public void setName(String pname){
	name= pname;	
	}
public void setHeader(String pheader){
	header = pheader;	
	}
public void setFooter(String pfooter){
	footer = pfooter;	
	}

public void fillGroupForm(BaseForTests baseForTests) {
	BaseForTests.driver.findElement(By.name("group_name")).clear();
    BaseForTests.driver.findElement(By.name("group_name")).sendKeys(name);
    BaseForTests.driver.findElement(By.name("group_header")).clear();
    BaseForTests.driver.findElement(By.name("group_header")).sendKeys(header);
    BaseForTests.driver.findElement(By.name("group_footer")).clear();
    BaseForTests.driver.findElement(By.name("group_footer")).sendKeys(footer);   
}
}